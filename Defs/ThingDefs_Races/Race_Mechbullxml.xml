        <lifeStages>
            <li>
                <bodyGraphicData>
                    <texPath>Things/Races/Mechanoid/Mechbull/DT_Mechbull</texPath>
                    <drawSize>2.5</drawSize>
                    <shadowData>
                        <volume>(0.8, 0.6, 0.6)</volume>
                        <offset>(0,0,-0.3)</offset>
                    </shadowData>
                </bodyGraphicData>
                <dessicatedBodyGraphicData>
                    <texPath>Things/Races/Mechanoid/Mechbull/DT_Mechbull</texPath>
                    <drawSize>2.2</drawSize>
