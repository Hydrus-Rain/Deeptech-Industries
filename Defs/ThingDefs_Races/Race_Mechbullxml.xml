<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <ThingDef ParentName="ATR_MechanicalAnimalThingBase">
        <defName>DTC_Bull</defName>
        <label>Bull unit</label>
        <description>This looks like a dog.</description>
        <statBases>
            <MoveSpeed>3.60</MoveSpeed>
            <MarketValue>300</MarketValue>
            <ArmorRating_Sharp>0.80</ArmorRating_Sharp>
            <ArmorRating_Blunt>0.50</ArmorRating_Blunt>
            <ArmorRating_Heat>0.80</ArmorRating_Heat>
            <MHC_NutritionalIntakeEfficiency>1</MHC_NutritionalIntakeEfficiency>
            <MHC_ChargingSpeed>2</MHC_ChargingSpeed>
			<MHC_MaintenanceRetention>1.4</MHC_MaintenanceRetention>
        </statBases>
        <tools>
            <li>
                <label>head</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <power>8</power>
                <cooldownTime>1.65</cooldownTime>
                <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
            </li>
        </tools>
        <race>
            <body>DTC_Scarab</body> <!--Temporary, will define a proper body later-->
            <packAnimal>true</packAnimal>
            <baseBodySize>2.4</baseBodySize>
            <baseHealthScale>2</baseHealthScale>
            <baseHungerRate>0.25</baseHungerRate>
            <nameOnTameChance>1</nameOnTameChance>
            <trainability>Advanced</trainability>
            <lifeStageAges>
                <li>
                    <def>AnimalAdult</def>
                    <minAge>0.0</minAge>
                    <soundWounded>Pawn_Muffalo_Wounded</soundWounded>
                    <soundDeath>Pawn_Muffalo_Death</soundDeath>
                </li>
            </lifeStageAges>
            <soundMeleeHitPawn>Pawn_Melee_BigBash_HitPawn</soundMeleeHitPawn>
            <soundMeleeHitBuilding>Pawn_Melee_BigBash_HitBuilding</soundMeleeHitBuilding>
            <soundMeleeMiss>Pawn_Melee_BigBash_Miss</soundMeleeMiss>
        </race>
        <recipes>
            <li>MHC_CoolantInjection</li>
        </recipes>
        <butcherProducts>
            <Steel>40</Steel>
            <Plasteel>10</Plasteel>
            <ComponentIndustrial>2</ComponentIndustrial>
        </butcherProducts>
        <modExtensions>
            <li Class="MechHumanlikes.MHC_MechanicalPawnExtension">
                <blacklistedNeeds>
                    <li MayRequire="Dubwise.DubsBadHygiene">Hygiene</li>
                    <li MayRequire="Dubwise.DubsBadHygiene">Bladder</li>
                    <li MayRequire="Dubwise.DubsBadHygiene">DBHThirst</li>
                </blacklistedNeeds>
                <mechanicalNeeds>
					<li>
						<key>MHC_Coolant</key>
						<value>3</value>
					</li>
					<li>
						<key>MHC_Lubrication</key>
						<value>2</value>
					</li>
                </mechanicalNeeds>
            </li>
        </modExtensions>
    </ThingDef>

    <PawnKindDef ParentName="ATR_MechanicalAnimalKindBase">
